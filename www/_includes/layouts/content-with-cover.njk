---
layout: layouts/base.njk
---

<style>
.cover-wrapper {
  width: 100%;
  height: 44vh;
  min-height: 20rem;
  max-height: 30rem;
  position: relative;
  background: #2a85ca40;
  overflow: hidden;
}
.cover, .cover-blur {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  height: 100%;
  width: 100%;
}
.cover-blur {
  object-fit: cover;
  filter: blur(3px) brightness(1.5);
  transform: scale(1.1);
}
.cover {
  object-fit: contain;
  filter: brightness(1.5);
}
@media (max-width: 1200px) {
  .cover-blur {
    object-fit: cover;
  }
  .cover {
    object-fit: cover;
  }
}

</style>

<div class="cover-wrapper">
  <img class="cover-blur" src="{{cover}}" alt="" />
  <img class="cover" src="{{cover}}" alt="" />
</div>

<div class="container">
  <section class="snow-view__docs has-subnav">

    <aside id="nav-primary" class="snow-view-nav">
      {% include 'layouts/components/menu.njk' %}
    </aside>

    <article class="snow-view-main">
      <div class="content">
        <h2 class="content-title">
          {{ title }}
        </h2>
        <div class="content-layout">
          <div class="content-body">
            {{ content | safe }}
          </div>
        </div>
      </div>
    </article>

    {% include 'layouts/components/subnav.njk' %}
  </section>
</div>
